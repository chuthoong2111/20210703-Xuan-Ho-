        <div class="row align-items-center">
          <div class="col-lg-5 offset-lg-1 mb-4 mb-lg-0">
            <div class="d-flex align-items-center justify-content-center">
              <img data-src="./assets/images/tool.png" class="lazyload img-fluid me-3">
